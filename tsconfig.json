{ 
    "compilerOptions": {
      "target": "es6",
      "module": "ES6",
      "sourceMap": true,
      "moduleResolution": "node", 
      "baseUrl": ".",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true
    },
    "paths": {
      "*": [
        "node_modules/*",

      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
  }
  